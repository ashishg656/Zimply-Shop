<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/z_margin_small"
    android:layout_marginTop="@dimen/z_margin_small"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/z_margin_small"
    android:paddingRight="@dimen/z_margin_small">

    <ImageView
        android:layout_width="@dimen/z_margin_large"
        android:layout_height="@dimen/z_margin_large"
        android:layout_marginRight="@dimen/z_margin_small"
        android:src="@drawable/ic_location"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Delivery Addresses"
        android:textColor="@color/z_text_color_dark"
        android:textSize="@dimen/z_font_medium"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/z_green_color_primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:includeFontPadding="false"
            android:padding="@dimen/z_margin_small"
            android:text="Add New"
            android:textColor="@color/z_white_color"/>
    </LinearLayout>

</LinearLayout>