<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-4dp"
    android:layout_marginRight="-4dp"
    android:background="@color/z_white_color"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/z_margin_mini"
        android:paddingLeft="@dimen/z_margin_small"
        android:paddingRight="@dimen/z_margin_large"
        android:paddingTop="@dimen/z_margin_small">

        <com.zimplyshop.app.widgets.CircularImageView
            android:layout_width="@dimen/z_product_rating_product_image_height"
            android:layout_height="@dimen/z_product_rating_product_image_height"
            android:layout_marginLeft="@dimen/z_margin_mini"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_test_user"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/z_margin_medium"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_mini"
                android:singleLine="true"
                android:text="Pheonix infra"
                android:textColor="@color/z_text_color_dark"
                android:textSize="@dimen/z_font_medium"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_supermini"
                android:singleLine="true"
                android:text="Selling 4,754 products"
                android:textColor="@color/z_text_color_dark"
                android:textSize="@dimen/z_font_mini"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_supermini"
                android:orientation="horizontal">

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/z_margin_small"
                    android:singleLine="true"
                    android:text="(295 ratings)"
                    android:textColor="@color/z_text_color_medium_dark"
                    android:textSize="@dimen/z_font_mini"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_mini"
                android:singleLine="true"
                android:text="View all ratings"
                android:textColor="@color/z_swipe_refresh_color_1"
                android:textSize="@dimen/z_font_mini"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>