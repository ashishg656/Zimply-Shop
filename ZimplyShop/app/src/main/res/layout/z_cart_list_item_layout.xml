<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/z_margin_supermini"
    android:layout_marginRight="@dimen/z_margin_supermini"
    android:layout_marginTop="@dimen/z_margin_mini"
    android:background="@drawable/ic_cart_bg_shadow"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/z_margin_small"
                android:paddingTop="@dimen/z_margin_small">

                <ImageView
                    android:layout_width="@dimen/z_cart_image_height"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/z_margin_small"
                    android:adjustViewBounds="true"
                    android:src="@drawable/sample_cushion"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/z_margin_supermini"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_minus_button"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/z_text_color_dark"/>

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_add_button"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/z_margin_small"
                        android:paddingRight="@dimen/z_margin_small"
                        android:paddingTop="@dimen/z_margin_small"
                        android:text="Granite cheese platter with sharf knife which can cut your fingers as well"
                        android:textColor="@color/z_text_color_dark"
                        android:textSize="@dimen/z_font_small"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:padding="@dimen/z_margin_medium">

                        <ImageView
                            android:layout_width="@dimen/z_margin_medium"
                            android:layout_height="@dimen/z_margin_medium"
                            android:src="@drawable/ic_cross_button"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/z_margin_small"
                    android:paddingLeft="@dimen/z_margin_small"
                    android:paddingRight="@dimen/z_margin_small">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/z_margin_mini"
                        android:text="Expected Delivery Date : 25th November 2015"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_mini"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/z_margin_mini"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/z_margin_small"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Product Price"
                                    android:textColor="@color/z_text_color_dark"
                                    android:textSize="@dimen/z_font_mini"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/z_margin_mini"
                                    android:text="Discount"
                                    android:textColor="@color/z_green_color_primary"
                                    android:textSize="@dimen/z_font_mini"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/z_margin_mini"
                                    android:text="Shipping Charges"
                                    android:textColor="@color/z_text_color_dark"
                                    android:textSize="@dimen/z_font_mini"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/z_margin_small"
                                android:gravity="right"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹5000"
                                    android:textColor="@color/z_text_color_dark"
                                    android:textSize="@dimen/z_font_mini"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/z_margin_mini"
                                    android:text="₹200"
                                    android:textColor="@color/z_green_color_primary"
                                    android:textSize="@dimen/z_font_mini"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/z_margin_mini"
                                    android:text="₹6000"
                                    android:textColor="@color/z_text_color_dark"
                                    android:textSize="@dimen/z_font_mini"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/z_margin_small"
                            android:background="@color/z_grey_shade_5"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/z_margin_mini"
                            android:gravity="right"
                            android:text="Rs 5000"
                            android:textColor="@color/z_blue_color"
                            android:textSize="@dimen/z_font_small"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>