<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_cart_bg_shadow"
    android:orientation="vertical"
    android:padding="@dimen/z_margin_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/z_margin_large"
            android:layout_height="@dimen/z_margin_large"
            android:layout_marginRight="@dimen/z_margin_small"
            android:src="@drawable/ic_user"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ashish Goel"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/z_margin_small"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/z_margin_large"
            android:layout_height="@dimen/z_margin_large"
            android:layout_marginRight="@dimen/z_margin_small"
            android:src="@drawable/ic_location"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B-5 / 290, Sector-8, Rohini, Delhi - 110085"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/z_margin_small"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/z_margin_large"
            android:layout_height="@dimen/z_margin_large"
            android:layout_marginRight="@dimen/z_margin_small"
            android:src="@drawable/ic_smartphone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91-9873443137"/>
    </LinearLayout>

</LinearLayout>