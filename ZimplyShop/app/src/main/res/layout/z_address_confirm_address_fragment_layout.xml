<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/z_margin_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/z_margin_mini"
            android:layout_marginTop="@dimen/z_margin_mini"
            android:text="CONFIRM ADDRESS"
            android:textColor="@color/z_text_color_medium_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/z_margin_small"
            android:background="@drawable/ic_cart_bg_shadow"
            android:orientation="vertical"
            android:paddingBottom="@dimen/z_margin_small"
            android:paddingLeft="@dimen/z_margin_large"
            android:paddingRight="@dimen/z_margin_large"
            android:paddingTop="@dimen/z_margin_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/z_margin_large"
                    android:layout_height="@dimen/z_margin_large"
                    android:layout_marginRight="@dimen/z_margin_small"
                    android:src="@drawable/ic_user"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Ashish Goel"
                    android:textColor="@color/z_text_color_dark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_small"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/z_margin_large"
                    android:layout_height="@dimen/z_margin_large"
                    android:layout_marginRight="@dimen/z_margin_small"
                    android:layout_marginTop="@dimen/z_margin_mini"
                    android:src="@drawable/ic_location"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B-5 / 290, Sector-8\nRohini\nDelhi - 110085"
                    android:textColor="@color/z_text_color_dark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_small"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/z_margin_large"
                    android:layout_height="@dimen/z_margin_large"
                    android:layout_marginRight="@dimen/z_margin_small"
                    android:src="@drawable/ic_smartphone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="+91-9873443137"
                    android:textColor="@color/z_text_color_dark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_medium"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/showmoreaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/z_margin_small"
                    android:text="EDIT/CHANGE ADDRESS"
                    android:textColor="@color/z_blue_color"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/z_margin_mini"
            android:layout_marginTop="@dimen/z_margin_large"
            android:text="ORDER SUMMARY"
            android:textColor="@color/z_text_color_medium_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/z_margin_small"
            android:background="@drawable/ic_cart_bg_shadow"
            android:paddingBottom="@dimen/z_margin_medium"
            android:paddingLeft="@dimen/z_margin_medium"
            android:paddingRight="@dimen/z_margin_medium">

            <include layout="@layout/z_cart_list_footer_layout"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/paynowbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/z_blue_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/z_margin_small">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay"
                    android:textColor="@color/z_white_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 20999"
                    android:textColor="@color/z_white_color"
                    android:textStyle="bold"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="MAKE PAYMENT"
                android:textColor="@color/z_white_color"
                android:textSize="@dimen/z_font_medium"/>

            <ImageView
                android:layout_width="@dimen/z_margin_medium"
                android:layout_height="@dimen/z_margin_medium"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:layout_marginRight="@dimen/z_margin_small"
                android:src="@drawable/ic_hardware_right_white"/>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>