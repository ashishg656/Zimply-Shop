<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zimplyshop.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".application.ZApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_app_launcher_icon"
        android:label="@string/app_name">
        <activity
            android:name=".activities.ZSplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragments.ZHomeFragment"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ZNoActionBarThemeTransparentStatusBar" />
        <activity
            android:name=".activities.ZProductDescriptionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ZNoActionBar" />
        <activity
            android:name=".activities.ZStoreDescriptionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ZNoActionBar" />
        <activity
            android:name=".activities.ZLoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ZNoActionBar" />
        <activity
            android:name=".activities.ZStoreRatingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ZNoActionBar" />
        <activity
            android:name=".activities.ZCartActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ZNoActionBar" />
        <activity
            android:name=".activities.ZDeliveryAddressActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ZNoActionBar" />
        <activity
            android:name=".activities.ZWishlistActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ZNoActionBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.ZShopMapsActivity"
            android:label="@string/title_activity_zshop_maps"
            android:screenOrientation="portrait"
            android:theme="@style/ZNoActionBarThemeTransparentStatusBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zimplyshop.app.activities.ZBaseActivity" />
        </activity>
    </application>

</manifest>
